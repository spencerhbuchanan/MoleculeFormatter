import java.util.Timer;
import java.util.TimerTask;

public class Clock {
	private int timeInSeconds = 5165;
//	private short secondHandAngle = 0;
//	private short minuteHandAngle = 0;
//	private short hourHandAngle = 0;
	
	public void initializeClock()
	{
		Timer secondTick = new Timer();
		
		secondTick.scheduleAtFixedRate(new TimerTask()
				{
					
					public void run()
					{
						timeInSeconds++;
						if(timeInSeconds > 84600)
						{
							timeInSeconds = 0;
						}
						printTime();
					}
					
				}, 0, 1000);
		
	}
	
	public int getTotalSeconds()
	{
		return timeInSeconds;
	}
	
	public int getSeconds()
	{
		return timeInSeconds % 60;
	}
	
	public int getMinutes()
	{
		return (timeInSeconds / 60) % 60; 
	}
	
	public int getHours()
	{
		return ((timeInSeconds / 60) / 60) % 60;
	}
	
	public void printTime()
	{
		System.out.format("Time is: %02d:%02d:%02d\n", getHours(), getMinutes(), getSeconds());
	}
	
}
