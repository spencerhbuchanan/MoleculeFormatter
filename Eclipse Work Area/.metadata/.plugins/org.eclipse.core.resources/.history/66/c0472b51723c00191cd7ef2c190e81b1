 */

import molecules.Molecule;

import java.util.Scanner;
import java.io.Console;

public class Main
{

	public static void main(String[] args) throws InterruptedException {
		short menuSelection = 0;
		
		Scanner inputScanner = new Scanner(System.in);
		Console console;
		
		do 
		{
			menuSelection = 0;
			
			for(int i = 0; i < 128; i++) System.out.print('\n');
			
			System.out.printf(	"Menu Options:\n"
					+ 		"\t1. Go To PSI Specific Items\n"
					+ 		"\t2. Import Molecule\n"
					+ 		"\t3. Print Molecule\n");
			
			System.out.flush();
			
			try {
				String menuString = inputScanner.nextLine();		//Inputs whole line into temp variable
				menuSelection = Short.parseShort(menuString);
			} catch(NumberFormatException e) {
				System.err.println("Error. Input not a number. Try again.");
				console.wait(1000);
				continue;
			}
			
			switch(menuSelection)
			{
				case 1:
					System.out.println("Gey");
					inputScanner.nextLine();
					break;
				
				case 2:
					System.out.println("Gucci");
					inputScanner.nextLine();
					break;
				
				case 3:
					System.out.println("Dolphin Broke");
					inputScanner.nextLine();
					break;
				
				default:
					System.out.println("Not an option... Press enter to try again...");
					inputScanner.nextLine();
			}
			
			
		} while (menuSelection != -1);
		
		inputScanner.close();
		
		/*
		Molecule molecule = new Molecule("MoleculeTest");
		molecule.importFile("Included");
		molecule.printMolecule();
		*/
	}
}
