
import java.util.ArrayList;

public class Atom
{
	private ArrayList	atomID			= new ArrayList();
	private ArrayList	atomElement		= new ArrayList();

	private ArrayList	atomXCoordinate	= new ArrayList();
	private ArrayList	atomYCoordinate	= new ArrayList();
	private ArrayList	atomZCoordinate	= new ArrayList();

	private ArrayList	bonds			= new ArrayList();

	public void addAtom(String atomID) {
		this.atomID.add(atomID);
	}
	
	public void printAtoms()
	{
		System.out.println(this.atomID.size());
	}
}
