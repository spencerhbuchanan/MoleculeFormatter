

public class Clock {
	private int timeInSeconds = 45;
//	private short secondHandAngle = 0;
//	private short minuteHandAngle = 0;
//	private short hourHandAngle = 0;
	
	public int getTotalSeconds()
	{
		return timeInSeconds;
	}
	
	public int getSeconds()
	{
		return timeInSeconds % 60;
	}
	
	public int getMinutes()
	{
		return (timeInSeconds / 60) % 60; 
	}
	
	public int getHours()
	{
		return ((timeInSeconds / 60) / 60) % 60;
	}
	
	public void printTime()
	{
		System.out.println(getHours() + ":" + getMinutes() + ":" + getSeconds());
	}
	
}
