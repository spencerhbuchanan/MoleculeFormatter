
import java.util.ArrayList;

public class Atom
{
	private ArrayList<String>	atomID			= new ArrayList();
	private ArrayList<String>	atomElement		= new ArrayList();

	private ArrayList<double>	atomXCoordinate	= new ArrayList();
	private ArrayList<double>	atomYCoordinate	= new ArrayList();
	private ArrayList<double>	atomZCoordinate	= new ArrayList();
/*
	private ArrayList	bonds			= new ArrayList();
*/
	public void addAtom(String atomID) {
		this.atomID.add(atomID);
	}
	
	public void printAtoms()
	{
		System.out.println(this.atomID.size());
	}
}
